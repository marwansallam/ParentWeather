<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marwansallam.parentweather.Controllers.WeatherDetailsFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_shape"
        android:padding="10dp">

        <TextView
            android:id="@+id/details_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/add_to_home"
            android:text="City Name"
            android:textColor="@color/sm_white"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/add_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/details_city_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/details_city_name"
            android:layout_marginRight="10dp"
            android:src="@android:drawable/ic_input_add"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/remove_from_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/details_city_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/details_city_name"
            android:layout_marginRight="10dp"
            android:src="@android:drawable/ic_delete"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_city_name"
            android:layout_marginLeft="10dp"
            android:text="Forecast"
            android:textColor="@color/sm_white"
            android:textSize="30dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/details_weather_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:padding="10dp"></ListView>

</RelativeLayout>
