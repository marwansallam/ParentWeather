<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/button_shape"
    android:padding="10dp">

    <TextView
        android:id="@+id/details_weather_day_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/details_weather_pic"
        android:text="Day Name : "
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/details_weather_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/details_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_weather_day_name"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView         android:textSize="15dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView         android:textSize="15dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView         android:textSize="15dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind Speed"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView         android:textSize="15dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind Degree"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView         android:textSize="15dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clouds"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView         android:textSize="15dp" 
                android:id="@+id/details_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Temp Value"
                android:textColor="@color/black" />

            <TextView         android:textSize="15dp" 
                android:id="@+id/details_weather_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Humidty Value"
                android:textColor="@color/black" />

            <TextView         android:textSize="15dp" 
                android:id="@+id/details_weather_winds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Wind Spped Value"
                android:textColor="@color/black" />

            <TextView         android:textSize="15dp" 
                android:id="@+id/details_weather_windd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Wind Degree Value"
                android:textColor="@color/black" />

            <TextView         android:textSize="15dp" 
                android:id="@+id/details_weather_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Cloud Value"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>